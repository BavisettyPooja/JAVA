import java.util.*;
public class Employee {
    
    public static void details(String name, int year, String add){
        
        System.out.println(name+"\t"+ year+"\t "+add+"\n");
    }
    public static void main(String args[]){
        System.out.println("Name\t Joining year\t Address\n");
        Employee e=new Employee();
        e.details("Robert",1994,"64C-wallsStreet");
        e.details("Sam",2000,"68D-wallsStreet");
        e.details("John",1999,"26B-wallsStreet");
    }
}
